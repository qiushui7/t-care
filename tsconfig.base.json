{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/**/dist",
    "packages/**/.mastra",
    "packages/**/node_modules",
  ],
  "files": [],
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/deps-analysis"
    },
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/mastra"
    }
  ]
}